# Connect to docdb bastion
alias gobastion='kubectl exec -it -n alfresco $(kubectl get po -n alfresco | grep documentdb-client | awk "{ print $1 }") -- sh'

# aws
complete -C '/usr/local/bin/aws_completer' aws